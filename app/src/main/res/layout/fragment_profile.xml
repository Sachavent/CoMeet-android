<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    tools:context="today.comeet.android.comeet.fragment.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="12dp"
            android:id="@+id/profile_cardView"
            app:cardCornerRadius="40dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">
                <ImageView
                    android:layout_height="80dp"
                    android:layout_width="match_parent"
                    android:id="@+id/profile_picture"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">

                </ImageView>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/profile_cardView"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <!--android.support.design.widget.FloatingActionButton
            app:fabSize="normal"
            android:id="@+id/btn_add_favorite_friend"
            android:src="@drawable/fab_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="addFavoriteFriend"
            android:layout_below="@id/profile_name"
            android:layout_margin="@dimen/fab_margin"
            android:layout_centerHorizontal="true"/-->

        <!--FrameLayout
            android:id="@+id/facebook_logout"
